@model List<Category>
@{
    ViewData["Title"] = "KATEGORİLER";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

@{
    int count = 0;
}

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">SİL</a>
                    <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-info">GÜNCELLE</a>
                </td>
            </tr>
        }
    </tbody>
    </table>
    <a class="btn btn-success" href="/Category/CreateCategory">Yeni Ekle</a>
